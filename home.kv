#: import NoTransition kivy.uix.screenmanager.NoTransition

MDScreen:
    name: "home"
    MDFloatLayout:
        md_bg_color: [1,1,1,1]
        ScreenManager:
            id: scr 
            MDScreen:
                name: 'livingroom'
                MDLabel:
                    text: "Living Room"
                    font_name: 'BPoppins'
                    font_size: "32sp"
                    pos_hint: {'center_y': 0.35}
                    halign: 'center'
                    color: rgba(0, 0, 59, 255)
                Image:
                    source: "Living room-rafiki.png"
                    pos_hint: {'center_x': 0.5,'center_y': 0.6}
                MyToggleButton:
                    text: 'ON'
                    icon: 'play-circle'
                    group: 'x'
                    size_hint: 0.375,0.07
                    pos_hint: {'center_x': 0.3,'center_y': 0.235}
                    ripple_scale: 0
                MyToggleButton:
                    text: 'OF'
                    icon: 'stop-circle'
                    group: 'x'
                    size_hint: 0.375, 0.07
                    pos_hint: {'center_x': 0.7,'center_y': 0.235}
                    ripple_scale: 0

            MDScreen:
                name: 'kitchen'
                MDLabel:
                    text: "Kitchen"
                    font_name: 'BPoppins'
                    font_size: "32sp"
                    pos_hint: {'center_y': 0.35}
                    halign: 'center'
                    color: rgba(0, 0, 59, 255)
                Image:
                    source: "—Pngtree—cooking kitchen_5409671.png"
                    pos_hint: {'center_x': 0.5,'center_y': 0.6}
                    size_hint_x: 0.9
                MyToggleButton:
                    text: 'ON'
                    icon: 'play-circle'
                    group: 'x'
                    size_hint: 0.375,0.07
                    pos_hint: {'center_x': 0.3,'center_y': 0.235}
                    ripple_scale: 0
                MyToggleButton:
                    text: 'OF'
                    icon: 'stop-circle'
                    group: 'x'
                    size_hint: 0.375, 0.07
                    pos_hint: {'center_x': 0.7,'center_y': 0.235}
                    ripple_scale: 0
            MDScreen:
                name: 'diningroom'
                MDLabel:
                    text: "Dining Room"
                    font_name: 'BPoppins'
                    font_size: "32sp"
                    pos_hint: {'center_y': 0.35}
                    halign: 'center'
                    color: rgba(0, 0, 59, 255)
                Image:
                    source: "—Pngtree—cartoon hand-painted dining table chair_3922734.png"
                    pos_hint: {'center_x': 0.5,'center_y': 0.6}
                    size_hint_x: 0.85
                MyToggleButton:
                    text: 'ON'
                    icon: 'play-circle'
                    group: 'x'
                    size_hint: 0.375,0.07
                    pos_hint: {'center_x': 0.3,'center_y': 0.235}
                    ripple_scale: 0
                MyToggleButton:
                    text: 'OF'
                    icon: 'stop-circle'
                    group: 'x'
                    size_hint: 0.375, 0.07
                    pos_hint: {'center_x': 0.7,'center_y': 0.235}
                    ripple_scale: 0
            MDScreen:
                name: 'bedroom'
                MDLabel:
                    text: "Bedroom"
                    font_name: 'BPoppins'
                    font_size: "32sp"
                    pos_hint: {'center_y': 0.35}
                    halign: 'center'
                    color: rgba(0, 0, 59, 255)
                Image:
                    source: "—Pngtree—bedroom cartoon bedroom simple bedroom_3921230.png"
                    pos_hint: {'center_x': 0.5,'center_y': 0.55}
                    size_hint_x: 0.9
                MyToggleButton:
                    text: 'ON'
                    icon: 'play-circle'
                    group: 'x'
                    size_hint: 0.375,0.07
                    pos_hint: {'center_x': 0.3,'center_y': 0.235}
                    ripple_scale: 0
                MyToggleButton:
                    text: 'OF'
                    icon: 'stop-circle'
                    group: 'x'
                    size_hint: 0.375, 0.07
                    pos_hint: {'center_x': 0.7,'center_y': 0.235}
                    ripple_scale: 0
        Navbar:
            size_hint: 0.85, 0.1
            pos_hint: {'center_x': 0.5,'center_y': 0.1}
            elevation: 18
            md_bg_color: [1,1,1,1]
            radius: [16]
            transition: NoTransition()
            MDGridLayout:
                cols: 4
                size_hint_x: 0.9
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                spacing: '30dp'
                ImageButton:
                    source: 'icons8-living-room-48.png'
                    on_release:
                        scr.current = "livingroom"
                ImageButton:
                    source: 'icons8-kitchen-room-48.png'
                    on_release:
                        scr.current = "kitchen"
                ImageButton:
                    source: 'icons8-dining-room-48.png'
                    on_release:
                        scr.current = "diningroom"
                ImageButton:
                    source: 'icons8-bed-48.png'
                    on_release:
                        scr.current = "bedroom"

    MDNavigationLayout:
        ScreenManager:
            MDScreen:
                MDBoxLayout:
                    orientation: "vertical"
                    MDToolbar:
                        title: 'Home Assistant'
                        left_action_items: [['menu',lambda x: nav_drawer.set_state("open")]]
                        elevation: 15
                    Widget:
        MDNavigationDrawer:
            id: nav_drawer
            MDBoxLayout : 
                orientation: 'vertical'
                spacing: '8dp'
                padding: '8dp'
                Image:
                    source: "Profile Interface-rafiki.png"
                    size_hint_y: 1
                MDLabel:
                    text: 'Kishanlal Choudhary'
                    font_style: 'Subtitle1'
                    font_size: '22sp'
                    halign: 'center'
                    size_hint_y: None
                    height: self.texture_size[1]
                MDLabel:
                    text:'kisanchoudhary000@gmail.com'
                    font_style: 'Caption'
                    font_size: '16sp'
                    halign: 'center'
                    size_hint_y: None
                    height: self.texture_size[1]
                
                ScrollView:
                    MDList:
                        OneLineIconListItem:
                            size_hint_y: 0.1
                        OneLineIconListItem:
                            text: 'Profile'
                            IconLeftWidget:
                                icon: 'face-profile'
                        OneLineIconListItem:
                            text: 'Settings'
                            IconLeftWidget:
                                icon: 'cog'
                        OneLineIconListItem:
                            text: 'Logout'
                            on_release:
                                root.manager.transition.direction = "right"
                                root.manager.current = "main"
                            IconLeftWidget:
                                icon: 'logout'
                Image:
                    source: 'home-assistant.png'
                    size_hint_y: 0.25
                    pos_hint: {'center_x': 0.5,'center_y':1}