MDScreen:
    name: "signup"
    MDFloatLayout:
        md_bg_color: [1,1,1,1]
        MDIconButton:
            icon: "arrow-left"
            pos_hint: {'center_y': 0.97}
            on_release:
                root.manager.transition.direction = "right"
                root.manager.current = "main"
        MDLabel:
            text: "Let's Get Started!"
            font_name: 'BPoppins'
            font_size: "27sp"
            pos_hint: {'center_x': 0.575,'center_y': 0.90}
            color: rgba(0, 0, 59, 255)
        MDLabel:
            text: "Create an account to register"
            font_name: 'MPoppins'
            font_size: "13sp"
            pos_hint: {'center_x': 0.580, 'center_y': 0.85}
            color: rgba(135,135,135,255)
        MDTextFieldRound:
            hint_text: "Name"
            icon_left: "account"
            pos_hint: {'center_x': 0.5,'center_y': 0.78}
            size_hint: 0.75, 0.06
            multiline: False
            normal_color: 1,1,1,1
            color_active: 1,1,1,1
            foreground_color: rgba(0, 153, 255, 255)
        MDTextFieldRound:
            hint_text: "Phone"
            icon_left: "phone"
            pos_hint: {'center_x': 0.5,'center_y': 0.68}
            size_hint: 0.75, 0.06
            multiline: False
            normal_color: 1,1,1,1
            color_active: 1,1,1,1
            foreground_color: rgba(0, 153, 255, 255)
        MDTextFieldRound:
            hint_text: "Email"
            icon_left: "email"
            pos_hint: {'center_x': 0.5,'center_y': 0.58}
            size_hint: 0.75, 0.06
            multiline: False
            normal_color: 1,1,1,1
            color_active: 1,1,1,1
            foreground_color: rgba(0, 153, 255, 255)
        MDTextFieldRound:
            hint_text: "Password"
            password: True
            icon_left: "key-variant"
            pos_hint: {'center_x': 0.5,'center_y': 0.48}
            size_hint: 0.75, 0.06
            multiline: False
            normal_color: 1,1,1,1
            color_active: 1,1,1,1
            foreground_color: rgba(0, 153, 255, 255)
        MDTextFieldRound:
            hint_text: "Confirm Password"
            password: True
            icon_left: "key-variant"
            pos_hint: {'center_x': 0.5,'center_y': 0.38}
            size_hint: 0.75, 0.06
            multiline: False
            normal_color: 1,1,1,1
            color_active: 1,1,1,1
            foreground_color: rgba(0, 153, 255, 255)
        Button:
            text: "Signup"
            size_hint: .66, .065
            pos_hint: {'center_x': 0.5,'center_y': 0.28}
            background_color: 0, 0, 0, 0
            font_name: "BPoppins"
            on_release: 
                root.manager.transition.direction = "left"
                root.manager.current = "login"
            canvas.before:
                Color:
                    rgb: rgba(0, 153, 255, 1)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [5]
        MDLabel:
            text: "or"
            pos_hint: {'center_y': 0.21}
            halign: "center"
            font_size: "13sp"
            font_name: "BPoppins"
        MDFloatLayout:
            md_bg_color: rgba(178,178,178,255)
            size_hint: 0.38, 0.002
            pos_hint: {'center_x': 0.25,'center_y': 0.208}
        MDFloatLayout:
            md_bg_color: rgba(178,178,178,255)
            size_hint: 0.38, 0.002
            pos_hint: {'center_x': 0.76,'center_y': 0.208}
        MDLabel:
            text: "Social Media Signup"
            font_name: "BPoppins"
            font_size: "13sp"
            halign: 'center'
            pos_hint: {'center_x': 0.5, 'center_y':0.16}
            color: rgba(135, 133, 193, 255)
        MDGridLayout:
            cols: 3
            size_hint: 0.48, 0.07
            pos_hint: {'center_x': 0.5,'center_y': 0.10}
            Image:
                source: "icons8-google-48.png"
            Image:
                source: "icons8-facebook-48.png"
            Image:
                source: "icons8-twitter-48.png"
        MDLabel:
            text: "Already have an account?"
            font_name: 'BPoppins'
            font_size: '11sp'
            pos_hint: {'center_x': .62,'center_y': 0.04}
            color: rgba(135, 133, 193, 255)
        MDTextButton:
            text: "Login here"
            font_name: 'BPoppins'
            font_size: '13sp'
            pos_hint: {'center_x': .77,'center_y': 0.04}
            color: rgba(0, 0, 59, 255)
            on_release:
                root.manager.transition.direction = "right"
                root.manager.current = "login"